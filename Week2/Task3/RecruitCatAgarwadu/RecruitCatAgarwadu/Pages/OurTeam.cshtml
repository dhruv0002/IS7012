@page
@model RecruitCatAgarwadu.Pages.OurTeamModel
@{
    ViewData["Title"] = "Our Team";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Dhruv Agarwal Recruitment Firm</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    </head>
    <body>
        <div class="media">
            <div class="media-left">
                <img src="./img/dhruv.jpg" class="media-object" style="width:60px">
            </div>
            <div class="media-body">
                <h4 class="media-heading">Dhruv Agarwal</h4>
                <div class="panel panel-default" style="margin-bottom:60px;">
                    <div class="panel-heading"><b>Expertise</b></div>
                    <div class="panel-body">Industry experience as a developer</div>

                    <div class="panel-heading"><b>Guide In</b></div>
                    <div class="panel-body">Portfolio Development, Mock Interviews</div>

                    <div class="panel-heading"><b>Office Hours</b></div>
                    <div class="panel-body">Monday to Friday 9:00 AM to 12:00 PM</div>
                </div>
            </div>
        </div>
        <hr />

        <div class="media">
            <div class="media-body">
                <h4 class="media-heading">John Doe</h4>
                <div class="panel panel-default" style="margin-bottom:60px;">
                    <div class="panel-heading"><b>Expertise</b></div>
                    <div class="panel-body">Industry experience in Sales and Marketing</div>

                    <div class="panel-heading"><b>Guide In</b></div>
                    <div class="panel-body">Career Coaching, Future Recruitment</div>

                    <div class="panel-heading"><b>Office Hours</b></div>
                    <div class="panel-body">Monday to Friday 12:00 PM to 03:00 PM</div>
                </div>
            </div>
            <div class="media-right">
                <img src="./img/john.jpg" class="media-object" style="width:60px">
            </div>
        </div>
        <hr />

        <div class="media" style="margin-bottom:60px;">
            <div class="media-left">
                <img src="./img/adam.jpg" class="media-object" style="width:60px">
            </div>
            <div class="media-body">
                <h4 class="media-heading">Adam Kimbel</h4>
                <div class="panel panel-default" style="margin-bottom:60px;">
                    <div class="panel-heading"><b>Expertise</b></div>
                    <div class="panel-body">Industry experience as a Chartered Accountant, Former IAS Officer</div>

                    <div class="panel-heading"><b>Manages</b></div>
                    <div class="panel-body">Legal, Tax and Financial Department</div>

                    <div class="panel-heading"><b>Office Hours</b></div>
                    <div class="panel-body">Monday to Friday 9:00 AM to 05:00 PM</div>
                </div>
            </div>
        </div>
    </body>
</html>